<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_back"
    tools:context=".Donation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="380dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

             <TextView
                 android:id="@+id/donation"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingTop="30dp"
                 android:text="Donation"
                 android:textAlignment="center"
                 android:textColor="@color/black"
                 android:textSize="30sp"
                 android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="152dp"

                    app:srcCompat="@drawable/logo" />

            <TextView
                 android:layout_width="335dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="@color/white"
                 android:paddingTop="20dp"
                 android:paddingBottom="40dp"
                 android:text="Do you want to donate item?"
                 android:textAlignment="center"
                 android:textColor="@color/black"
                 android:textSize="17sp" />

              <LinearLayout
                 android:layout_width="335dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="@color/white"
                 android:orientation="vertical">

                 <EditText
                     android:id="@+id/donate_name"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="50dp"
                     android:layout_marginRight="50dp"
                     android:autofillHints=""
                     android:ems="10"
                     android:hint="Food Name"
                     android:inputType="textPersonName"
                     android:minHeight="48dp" />

                  <Spinner
                      android:id="@+id/spinner1"
                      android:layout_width="match_parent"
                      android:layout_height="48dp"
                      android:layout_marginLeft="50dp"
                      android:layout_marginRight="50dp"
                      android:entries="@array/locations_array"
                      android:prompt="@string/select" />


               <!--   <TextView
                      android:id="@+id/textView8"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="50dp"
                      android:layout_marginRight="50dp"
                      android:autofillHints=""
                      android:ems="10"
                      android:hint="Donate Date"
                      android:inputType="textPersonName"
                      android:minHeight="48dp" /> -->

                  <EditText
                       android:id="@+id/donate_amount"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="50dp"
                       android:layout_marginRight="50dp"
                       android:autofillHints=""
                       android:ems="10"
                       android:hint="Amount"
                           android:inputType="phone"
                           android:digits="1234567890"
                       android:minHeight="48dp" />

                  <TextView
                      android:id="@+id/date"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="50dp"
                      android:layout_marginRight="50dp"
                      android:autofillHints=""
                      android:ems="10"
                      android:gravity="center_vertical"
                      android:hint=" Click to Choose Date"
                      android:inputType="textPersonName"
                      android:minHeight="48dp"
                      android:textSize="16sp"

                      />

                  <EditText
                       android:id="@+id/donate_descript"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="50dp"
                       android:layout_marginRight="50dp"
                       android:autofillHints=""
                       android:ems="10"
                       android:hint="Food Desciption"
                       android:inputType="textPersonName"
                       android:minHeight="48dp" />

               </LinearLayout>

               <Button
                   android:id="@+id/donate_button"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="50dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginEnd="50dp"
                   android:background="@drawable/button_login"
                   android:backgroundTint="@color/lightblue"
                   android:text="yes, I donate"
                   android:textColor="@color/black"
                   tools:ignore="HardcodedText" />

               <Button
                   android:id="@+id/donate_cancel_button"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="50dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginEnd="50dp"
                   android:layout_marginBottom="20dp"
                   android:background="@drawable/button_login"
                   android:backgroundTint="@color/lightblue"
                   android:text="cancel"
                   android:textColor="@color/black"
                   tools:ignore="HardcodedText" />
           </LinearLayout>
          </ScrollView>

      </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>


